<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/propertyViewC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:id="@+id/relative_layoutC"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/propertyImageC"
                android:layout_width="300dp"
                android:layout_height="190dp"
                android:scaleType="centerCrop"
                android:src="@drawable/house_1" />

            <TextView
                android:id="@+id/propertyTitleC"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/propertyImageC"
                android:layout_marginTop="10dp"
                android:paddingHorizontal="18dp"
                android:text="Modern House"
                android:textColor="@color/grey"
                android:textSize="17sp"
                android:textStyle="normal|bold" />

            <TextView
                android:id="@+id/propertyLocationC"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/propertyTitleC"
                android:layout_marginTop="6dp"
                android:drawablePadding="2dp"
                android:paddingHorizontal="14dp"
                android:text="Cape Town, Western Cape"
                android:textColor="@color/grey"
                android:textSize="14sp"
                app:drawableStartCompat="@drawable/location_gray" />

            <RelativeLayout
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/propertyLocationC">

                <TextView
                    android:id="@+id/RC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="10dp"
                    android:paddingStart="18dp"
                    android:text="R"
                    android:textColor="@color/grey"
                    android:textSize="18sp"
                    android:textStyle="normal|bold" />

                <TextView
                    android:id="@+id/propertyPriceC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/RC"
                    android:paddingVertical="10dp"
                    android:paddingStart="8dp"
                    android:text="7250000"
                    android:textColor="@color/grey"
                    android:textSize="18sp"
                    android:textStyle="normal|bold" />

                <ImageView
                    android:id="@+id/imgBathC"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="160dp"
                    android:layout_toEndOf="@id/RC"
                    android:src="@drawable/bathtub_gray" />

                <TextView
                    android:id="@+id/propertyBathsC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/imgBathC"
                    android:paddingHorizontal="6dp"
                    android:text="2"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imgBedC"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="210dp"
                    android:layout_toEndOf="@id/RC"
                    android:src="@drawable/bed_gray" />

                <TextView
                    android:id="@+id/propertyBedsC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/imgBedC"
                    android:paddingHorizontal="6dp"
                    android:text="2"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>