<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    android:orientation="vertical"
    tools:context=".ClientCalculatorFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="210dp">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/backToProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="120dp"
            android:clickable="true"
            android:src="@drawable/icon_back"
            app:backgroundTint="@color/white"
            app:borderWidth="1dp"
            app:fabSize="mini" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="110dp"
            android:text="Bond Repayment Calculator"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="28sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingStart="30dp"
        android:paddingEnd="30dp">

        <TextView
            android:id="@+id/tvHeader1"
            android:layout_width="190dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="Monthly Repayment:"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tvMonthlyRepay"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="R"
            android:textAlignment="textEnd"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/blue"
            android:layout_below="@+id/tvMonthlyRepay"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginTop="25dp"
        android:paddingStart="30dp"
        android:paddingEnd="30dp">

        <TextView
            android:id="@+id/tvHeader2"
            android:layout_width="190dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:text="Total Once-Off Cost:"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tvTotOnceOff"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:text="R"
            android:textAlignment="textEnd"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/blue"
            android:layout_below="@+id/tvTotOnceOff"
            android:orientation="horizontal" />

        <TextView
            android:id="@+id/tvHeader3"
            android:layout_width="190dp"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/tvHeader2"
            android:layout_alignParentStart="true"
            android:text="Deposit"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvDeposit"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_below="@+id/tvHeader2"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="15dp"
            android:text="R"
            android:textAlignment="textEnd"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvHeader4"
            android:layout_width="190dp"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/tvHeader3"
            android:layout_alignParentStart="true"
            android:text="Bond Registration Cost"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvBondReg"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_below="@+id/tvHeader3"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="15dp"
            android:text="R"
            android:textAlignment="textEnd"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvHeader5"
            android:layout_width="190dp"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/tvHeader4"
            android:layout_alignParentStart="true"
            android:text="Property Transfer Cost"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvPropTrf"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_below="@+id/tvHeader4"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="15dp"
            android:text="R"
            android:textAlignment="textEnd"
            android:textSize="16sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:paddingStart="30dp"
        android:paddingEnd="30dp">

        <TextView
            android:id="@+id/tvHeader6"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="Minimum Gross Monthly Income Required:"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tvMonthlyIncome"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="R"
            android:textAlignment="textEnd"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="6dp"
            android:background="@color/blue"
            android:layout_below="@+id/tvHeader6"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="30dp"
        android:paddingEnd="30dp">

        <Button
            android:id="@+id/btnRecalculate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            android:text="Recalculate"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>